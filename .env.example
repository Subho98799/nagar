# Nagar Alert Hub - Environment Variables Template
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME="Nagar Alert Hub"
APP_VERSION="0.1.0"
DEBUG=True

# CORS - Comma-separated list of allowed frontend origins
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:5175"

# Firebase/Firestore Configuration
# Download service account JSON from Firebase Console
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_CREDENTIALS_PATH="./secrets/firebase-service-account.json"

# Future: Gemini API (not used yet)
# GEMINI_API_KEY="your-gemini-api-key"

# For local development without Firebase, enable mock DB (persistent JSON)
# Set USE_MOCK_DB=True to use the JSON-backed mock DB at MOCK_DB_PATH
# Example:
# USE_MOCK_DB=True
# MOCK_DB_PATH=./mock_db.json

